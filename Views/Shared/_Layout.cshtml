<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Blogifier</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        .navbar {
            background-color: #5731b3;
            padding: 2rem 1rem;
        }


        .btn {
            text-transform: uppercase;
            font-size: .875rem;
            font-weight: 500;
        }

        .page-title {
            color: #5731b3;
            margin: 0;
            margin-bottom: 2rem;
            border-left: .5rem solid #5731b3;
            padding-left: 1rem;
            text-transform: uppercase;
            line-height: 1;
        }

        .btn-primary {
            color: #fff;
            background-color: #5731b3;
            border-color: #5731b3
        }

        .btn-primary:hover, .btn-primary:active, .btn-primary.active {
            color: #fff;
            background-color: #704acd;
            border-color: #704acd
        }

        .btn-primary:focus, .btn-primary.focus {
            box-shadow: 0 0 0 3px rgba(87,49,179,0.25)
        }

        .btn-primary.disabled, .btn-primary:disabled {
            background-color: #5731b3;
            border-color: #5731b3
        }

        .show > .btn-primary.dropdown-toggle {
            background-color: #704acd;
            border-color: #704acd
        }


        .form-control {
            border-width: 2px;
        }

        .btn-outline-light:hover, .btn-outline-light:active {
            color: #5731b3;
        }

        .validation-summary-errors ul {
            margin: 0 0 1.5rem;
            padding: 0;
            list-style-position: inside;
            font-size: .875rem;
        }

        .validation-summary-errors,
        .field-validation-error {
            margin: 0;
            padding: 0;
            font-weight: 500;
            font-size: .75rem;
        }

        .input-validation-error {
            border-color: red !important;
        }
    </style>
</head>
<body>
    <header class="header mb-5">
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">Blogifier</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @await Html.PartialAsync("_LoginPartial")
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <h4 class="page-title">@ViewData["Title"]</h4>
        @RenderBody()
    </div>
    <footer class="container mt-5">
        <p class="text-uppercase text-muted">&copy; 2017 - Blogifier</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
