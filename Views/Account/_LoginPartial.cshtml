@using Microsoft.AspNetCore.Identity
@using Blogifier.Models
@using Blogifier.Services;
@inject IConfigService config

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    bool demo = config.GetSetting("Demo") == "true";
}

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="~/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/admin/">Admin</a></li>
    </ul>
    @if (!demo)
    {
        <form asp-area="" asp-controller="Account" asp-action="ChangePassword" method="get" id="changePasswordForm" class="form-inline mb-2 mb-lg-0 ml-lg-auto mr-lg-3">
            <button class="btn btn-outline-light" type="submit">Change password</button>
        </form>
    }
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="form-inline">
        <button class="btn btn-danger" type="submit">Log out</button>
    </form>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item"><a class="nav-link" href="~/">Home</a></li>
        <li class="nav-item"><a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
