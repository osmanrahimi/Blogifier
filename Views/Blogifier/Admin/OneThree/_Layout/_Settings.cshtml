@using Blogifier.Core.Common
<!DOCTYPE html>
<html lang="en">
@Html.Partial("~/Views/Blogifier/Admin/OneThree/_Shared/_Head.cshtml")
<body>
    <div class="bf">
        @Html.Partial("~/Views/Blogifier/Admin/OneThree/_Shared/_Taskbar.cshtml")
        <div class="bf-header d-flex d-lg-none">Settings / <span></span> <i class="fa fa-chevron-down"></i></div>
        <div class="bf-body">
            <div class="bf-sidebar d-lg-block">
                <ul class="bf-sidebar-settings">
                  <li><a href="~/admin/settings/profile">Profile</a></li>
                  <li><a href="~/account/changepassword">Change Password</a></li>
                    @if (ApplicationSettings.SingleBlog == false)
                    {
                      <li><a href="~/admin/settings/personal">Blog Settings</a></li>
                    }
                    <li><a href="~/admin/settings/custom">Custom Code</a></li>
                    <li><a href="~/admin/settings/import">Import Rss</a></li>
                    @if (Model.Profile != null && Model.Profile.IsAdmin)
                    {
                      <li><a href="~/admin/settings/appsettings">Blog</a></li>
                      <li><a href="~/admin/settings/users">Users</a></li>
                      <li><a href="~/admin/settings/about">About</a></li>
                    }
                </ul>
            </div>
            <div class="bf-content">
                @RenderBody()
            </div>
        </div>
    </div>
    @Html.Partial("~/Views/Blogifier/Admin/OneThree/_Shared/_Foot.cshtml")
    @RenderSection("Scripts", false)
</body>
</html>
