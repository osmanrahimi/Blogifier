<script src="~/themes/OneFour/js/jquery.min.js"></script>
<script src="~/themes/OneFour/js/popper.min.js"></script>
<script src="~/themes/OneFour/js/bootstrap.min.js"></script>
<script src="~/themes/OneFour/js/prism.js"></script>
<script src="~/themes/OneFour/js/blog.js" asp-append-version="true"></script>
@Html.Raw(customFooter)
